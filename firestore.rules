rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ============================================
    // HELPER FUNCTIONS
    // ============================================

    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Check if user document exists in authorized_users
    function userExists() {
      return exists(/databases/$(database)/documents/authorized_users/$(request.auth.uid));
    }

    // Get user document from authorized_users (only call if userExists() is true)
    function getUserData() {
      return get(/databases/$(database)/documents/authorized_users/$(request.auth.uid)).data;
    }

    // Check if user is active
    function isActiveUser() {
      return isAuthenticated() && userExists() && getUserData().isActive == true;
    }

    // Check user role
    function hasRole(role) {
      return isActiveUser() && getUserData().role == role;
    }

    // Check if user is admin
    function isAdmin() {
      return hasRole('admin');
    }

    // Check if user has specific permission
    function hasPermission(permission) {
      return isActiveUser() && permission in getUserData().permissions;
    }

    // Check if user can read (admin, user, or viewer)
    function canRead() {
      return isActiveUser();
    }

    // Check if user can write (admin or user)
    function canWrite() {
      return isActiveUser() && (getUserData().role == 'admin' || getUserData().role == 'user');
    }

    // Check if user can delete (admin only by default)
    function canDelete() {
      return isAdmin() || hasPermission('delete');
    }

    // Check if user has access to a specific module (admins bypass this check)
    // NOTE: Firestore Security Rules doesn't support array.contains()
    // Module-specific access is enforced in the application layer
    function hasModuleAccess(moduleName) {
      return isActiveUser();
    }

    // Validate required fields exist
    function hasRequiredFields(fields) {
      return request.resource.data.keys().hasAll(fields);
    }

    // ============================================
    // USER MANAGEMENT
    // ============================================

    // Authorized Users - Users can read their own doc, admins can manage all
    match /authorized_users/{userId} {
      // Permitir lectura a usuarios autenticados (necesario para login flow)
      // La query por email debe funcionar para encontrar usuarios pre-autorizados
      allow read: if isAuthenticated();
      allow create: if isAdmin();
      allow update: if isAdmin() ||
        (request.auth.uid == userId &&
         !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'permissions', 'modules', 'isActive']));
      allow delete: if isAdmin();
    }

    // Roles - Admin only
    match /roles/{roleId} {
      allow read: if canRead();
      allow create, update: if isAdmin();
      allow delete: if isAdmin() &&
        resource.data.isSystemRole != true; // Prevent deleting system roles
    }

    // Admin Logs - Append only, admins can read and delete
    match /admin_logs/{logId} {
      allow read: if isAdmin();
      allow create: if isAuthenticated(); // Permite logging de login_failed para usuarios no registrados
      allow update: if false; // Logs cannot be modified
      allow delete: if isAdmin(); // Admins can delete logs
    }

    // ============================================
    // SYSTEM CONFIGURATION
    // ============================================

    // System Config - Public read (needed for app initialization before login)
    match /config/{configId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Business Info - Public read (needed for branding before login)
    match /business_info/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // ============================================
    // CLIENTS MODULE
    // ============================================

    match /clients/{clientId} {
      allow read: if isAdmin() || (canRead() && hasModuleAccess('clients'));
      allow create: if isAdmin() || (canWrite() && hasModuleAccess('clients'));
      allow update: if isAdmin() || (canWrite() && hasModuleAccess('clients'));
      allow delete: if isAdmin() || canDelete();
    }

    // Client Config
    match /client_config/{configId} {
      allow read: if canRead() && hasModuleAccess('clients');
      allow write: if isAdmin();
    }

    // ============================================
    // PROJECTS MODULE (Proposals/Estimates)
    // ============================================

    match /proposals/{proposalId} {
      allow read: if isAdmin() || (canRead() && hasModuleAccess('projects'));
      allow create: if isAdmin() || (canWrite() && hasModuleAccess('projects'));
      allow update: if isAdmin() || (canWrite() && hasModuleAccess('projects'));
      allow delete: if isAdmin() || canDelete();
    }

    // Proposal Config
    match /proposal_config/{configId} {
      allow read: if canRead() && hasModuleAccess('projects');
      allow write: if isAdmin();
    }

    // Catalog Items
    match /catalogItems/{itemId} {
      allow read: if isAdmin() || (canRead() && hasModuleAccess('projects'));
      allow create, update: if isAdmin() || (canWrite() && hasModuleAccess('projects'));
      allow delete: if isAdmin() || canDelete();
    }

    // ============================================
    // MATERIALS MODULE
    // ============================================

    match /materials/{materialId} {
      allow read: if isAdmin() || (canRead() && hasModuleAccess('materials'));
      allow create: if isAdmin() || (canWrite() && hasModuleAccess('materials'));
      allow update: if isAdmin() || (canWrite() && hasModuleAccess('materials'));
      allow delete: if isAdmin() || canDelete();
    }

    // Material Config
    match /material_config/{configId} {
      allow read: if canRead() && hasModuleAccess('materials');
      allow write: if isAdmin();
    }

    // ============================================
    // WORKERS MODULE
    // ============================================

    match /workers/{workerId} {
      allow read: if isAdmin() || (canRead() && hasModuleAccess('workers'));
      allow create: if isAdmin() || (canWrite() && hasModuleAccess('workers'));
      allow update: if isAdmin() || (canWrite() && hasModuleAccess('workers'));
      allow delete: if isAdmin() || canDelete();
    }

    // Companies (Contractor companies)
    match /companies/{companyId} {
      allow read: if isAdmin() || (canRead() && hasModuleAccess('workers'));
      allow create: if isAdmin() || (canWrite() && hasModuleAccess('workers'));
      allow update: if isAdmin() || (canWrite() && hasModuleAccess('workers'));
      allow delete: if isAdmin() || canDelete();
    }

    // Worker Config
    match /worker_config/{configId} {
      allow read: if canRead() && hasModuleAccess('workers');
      allow write: if isAdmin();
    }

    // ============================================
    // TREASURY MODULE (Cobros & Pagos)
    // ============================================

    // Cobros - Collections from clients
    match /cobros/{cobroId} {
      allow read: if isAdmin() || (canRead() && hasModuleAccess('treasury'));
      allow create: if isAdmin() || (canWrite() && hasModuleAccess('treasury'));
      allow update: if isAdmin() || (canWrite() && hasModuleAccess('treasury'));
      allow delete: if isAdmin() || canDelete();
    }

    // Pagos - Payments to workers
    match /pagos/{pagoId} {
      allow read: if isAdmin() || (canRead() && hasModuleAccess('treasury'));
      allow create: if isAdmin() || (canWrite() && hasModuleAccess('treasury'));
      allow update: if isAdmin() || (canWrite() && hasModuleAccess('treasury'));
      allow delete: if isAdmin() || canDelete();
    }

    // Treasury Config
    match /treasury_config/{configId} {
      allow read: if canRead() && hasModuleAccess('treasury');
      allow write: if isAdmin();
    }

    // ============================================
    // WORK PLANNING MODULE
    // ============================================

    match /workPlans/{planId} {
      allow read: if isAdmin() || (canRead() && hasModuleAccess('work-planning'));
      allow create: if isAdmin() || (canWrite() && hasModuleAccess('work-planning'));
      allow update: if isAdmin() || (canWrite() && hasModuleAccess('work-planning'));
      allow delete: if isAdmin() || canDelete();
    }

    // Work Planning Config
    match /work_planning_config/{configId} {
      allow read: if canRead() && hasModuleAccess('work-planning');
      allow write: if isAdmin();
    }

    // ============================================
    // MODULE CONFIGURATIONS (Generic)
    // ============================================

    // moduleConfigs - Dynamic form configurations (clients, materials, etc.)
    match /moduleConfigs/{moduleId} {
      allow read: if canRead();
      allow write: if isAdmin();
    }

    // System Modules - Navigation and module management
    match /system_modules/{moduleId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // ============================================
    // CATCH-ALL RULE (Deny by default)
    // ============================================

    // Deny access to any collection not explicitly defined
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
